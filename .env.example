# Riva AI - Environment Configuration
# Get your API key from: https://aistudio.google.com/app/apikey

# REQUIRED: Gemini API Key
GOOGLE_API_KEY=your_gemini_api_key_here

# OPTIONAL: Google Cloud Project ID (for Vertex AI and Cloud Trace)
GOOGLE_CLOUD_PROJECT=

# OPTIONAL: Gemini Model (default: gemini-2.0-flash-exp)
GEMINI_MODEL=gemini-2.0-flash-exp

# OPTIONAL: Environment (development/production)
ENVIRONMENT=development

# Observability Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_TRACING=true
ENABLE_CLOUD_TRACE=false
TRACE_SAMPLE_RATE=1.0
ENABLE_METRICS=true
METRICS_PORT=9090

# Google Classroom API
# Path to OAuth credentials JSON file (download from Google Cloud Console)
GOOGLE_CLASSROOM_CREDENTIALS=credentials.json
